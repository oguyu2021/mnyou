<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @task, url: tasks_path, local: true) do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :description %>

  <p>タイトル:<%= @task.title %></p>
  <p>本文:<%= @task.description %></p>
  <%= form.submit  "登録する" %>

  <%= form.submit "戻る", name:'back' %>
<% end %>